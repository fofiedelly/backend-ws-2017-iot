{% extends 'layout.twig' %}
{% block title %}Startseite{% endblock %}
{% block user %}
    {% if user %}
        Logged as
        {{ user.username }}&nbsp; | &nbsp;
        <a href="/logout">Logout</a>
    {% else %}
        <a href="/login">Einloggen</a>
        |
        <a href="/register">Registrieren</a>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="col-xs-12">
        <div class="panel panel-warning">
            <div class="panel-body" style="padding: 3em;">
                <center>
                    <ul>
                        {% for server in roomServers %}
                            <li style="list-style: none;">
                                <h3>
                                    <a href="/server/{{ loop.index }}{{ server.url }}">{{ server.name }}</a>
                                </h3>
                            </li>
                        {% endfor %}
                    </ul>
                    <hr>
                    <center>
                        <a href="/new-room-server" class="btn btn-default btn-raised">Neuer Room Server hinzuf√ºgen</a>
                    </center>
                </center>
            </div>
        </div>
    </div>
{% endblock %}
